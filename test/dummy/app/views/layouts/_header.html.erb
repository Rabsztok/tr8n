<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/home">
        <span class="h3"><%= tr("Tr8n Service") %></span>
      </a>
       
      <ul class="nav">
      </ul>
    
      <ul class="nav pull-right">
        <% if current_user %>
          <li>
            <a href="#" onClick="Tr8n.UI.LanguageSelector.show(true)" class="dropdown-toggle" data-toggle="dropdown">
              <%= image_tag(tr8n_current_language.flag_url, :style => "align:middle") %>
              &nbsp; 
              <%= tr8n_current_language.name %>
            </a>
          </li>
          <li class="dropdown">
            <a id="user_menu_trigger" href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%=image_tag(current_user.mugshot, :style=>"max-width:16px;max-height:16px;padding:1px;border:1px solid #888;") %> &nbsp;
              <%=current_user.name %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu pas">
              <li role="presentation" class="text-center">
                <%=image_tag(current_user.mugshot, :style=>"width:80px;height:80px;border:1px solid #eee", :class=>"img-circle") %>
              </li>
              <li class="divider"></li>
              <li><%= link_to_function tr("Change Language"), "Tr8n.UI.LanguageSelector.show(true)" %></li>

              <li class="divider"></li>
              <li>
                <%=link_to(tr("Documentation"), "/docs") %>
              </li>
              <li>
                <%=link_to(tr("Administration"), "/tr8n/admin/applications") %>
              </li>

              <li class="divider"></li>
              <li><%=link_to(tr("Logout"), "/login/out")%></li>
            </ul>
          </li>
        <% else %>
          <li><%=link_to(tr("Login"), "/login")%></li>
        <% end %>
      </ul>

    </div>
  </div>
</div>

<div class="container">
  <%=render :partial => "/layouts/flashes" %>
</div>


<script>
  $(function(){
    $('#user_menu_trigger').dropdown();
  });
</script>