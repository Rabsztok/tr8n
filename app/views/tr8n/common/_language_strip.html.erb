<% if Tr8n::Config.enabled? %>
<style>
.tr8n_language_strip                            {text-align:center; color:#777;}
.tr8n_language_strip a                          {text-decoration:none; color:#777; outline:none; border:0px; font-size:12px;}
.tr8n_language_strip a img                      {border:0px;}
.tr8n_language_strip a:hover                    {text-decoration:underline}  
</style>
<div class="tr8n_language_strip">
  <% if tr8n_current_application.featured_languages.any? %>
    <% tr8n_current_application.featured_languages[0..9].each do |lang| %>
        <%= tr8n_language_name_tag(lang, opts) %> &nbsp;
    <% end %>
    
    <% if tr8n_current_application.application_languages.count > tr8n_current_application.featured_application_languages.count %>
        <%=link_to_function("&raquo;".html_safe, "Tr8n.UI.LanguageSelector.show()") %>
    <% end %>
  <% end %>
</div>
<% end %>