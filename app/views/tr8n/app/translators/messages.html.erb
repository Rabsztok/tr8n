<%= tr8n_with_options_tag(:default_locale => Tr8n::Config.default_admin_locale, :admin => true) do %>

  <%= render :partial => "/tr8n/app/common/header" %>
  <%=render(:partial => "view_sections") %>

  <div class="section grey">
    <%=tra("This translator has submitted the following forum messages.") %>
  </div>

  <div class="section">
    <% if @messages.empty? %>
      <%= tra("No messages have been submitted.") %>
    <% else %>
      <%= tr8n_paginator_tag(@messages, :subject => 'message') %>

      <table class="table table-hover ">
        <thead>
        <tr>
          <th style="width:150px;"><%=tra("Date") %></th>
          <th><%=tra("Message") %></th>
        </tr>
        </thead>
        <tbody id="languages" data-update-url="/tr8n/translator/settings/update_languages_order">
        <% @messages.each do |m| %>
          <tr>
            <td>
              <%= m.created_at.tr(:date_time) %>
            </td>
            <td>
              <%=m.message%>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>

    <% end %>
  </div>

  <%= render :partial => "/tr8n/app/common/footer" %>

<% end %>
